# Agent 核心配置

[agent]
name = "MCP API Test Agent"
version = "1.0.0"
workdir = "./workspace"

# MCP Server 配置列表
[[agent.mcp_servers]]
id = "document_loader"
command = "uvx awslabs.document-loader-mcp-server@latest"
transport = "stdio"
restart_policy = "on-failure"

# 记忆系统配置
[agent.memory]
# 短期记忆容量（条数）
short_term_capacity = 50
# 长期记忆后端（chromadb / faiss）
long_term_backend = "chromadb"

# 任务管理配置
[agent.task]
# 检查点保存间隔（秒）- 支持断点续传
checkpoint_interval = 60
# 是否每处理一项即保存检查点
checkpoint_on_item = true
# 失败自动重试
retry_on_failure = true
# 最大重试次数
max_retries = 3